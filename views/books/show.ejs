<h2><%= book.title %></h2>
<div>
    <img  height="150" width="100" src="<%= book.coverImagePath %>">
    <div>
        <a href="/authors/<%= book.author.id %>"><h3>Author: <%= book.author.name %> </h3></a>
    </div>
    <div>
        <h3>Publish Date: <%= book.publishDate.toDateString() %></h3>
    </div>
    <div>
        <h3>Page Count: <%= book.pageCount %></h3>
    </div>
    <div>
        <h3>Description: <%= book.description %></h3>
    </div>
</div>
<br>
<div>
    <div>
        <%- include('../partials/_form_delete', 
        { url: `/books/${book.id}` }) %>
    </div>
    <div>
        <a href="/books/<%= book.id %>/edit">Edit</a>
    </div>
    
</div>